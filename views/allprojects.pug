extends layout.pug

block content
  nav.grid-container.portfolio-breadcrumb
      a(href='/') ← HOME
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9
        h1 Check Out My Portfolio
        div.all-projects
          p
            |I am continuously adding new projects to my portfolio. This is a space where I share some examples of my work, 
            |listed in order of most recent. If you’re interested in digging deeper, links to the GitHub repo for each project 
            |can be found on individual project pages. If you have any questions, please feel free to contact me.
          each project in projects
            div.project-icon
              img(src=`${project.icon}`)
            div.project-list
              a(href=`/projects/${project.id}`)
                h5.my-name #{project.project_name}
                p #{project.description}
          